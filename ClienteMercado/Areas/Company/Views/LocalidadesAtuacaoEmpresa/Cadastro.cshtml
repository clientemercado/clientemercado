@model ClienteMercado.UI.Core.ViewModel.DadosEmpresaClienteViewModel

@{
    ViewBag.Title = "SuperMarket_On";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="http://code.jquery.com/jquery-1.8.2.js"></script>
<script src="http://code.jquery.com/ui/1.9.0/jquery-ui.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pnotify/3.2.1/pnotify.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pnotify/3.2.1/pnotify.buttons.js"></script>

<link rel="stylesheet" href="http://code.jquery.com/ui/1.9.0/themes/base/jquery-ui.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pnotify/3.2.1/pnotify.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pnotify/3.2.1/pnotify.buttons.css" />

<link href="~/Areas/Company/Content/css/index.css" rel="stylesheet" />
<script src="~/Areas/Company/Content/js/LocalidadesAtuacaoEmpresa.js"></script>

<div class="row">
    <!-- BEGIN VALIDATION STATES-->
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                Cadastro - Localidades de Atuação Empresa
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-1">
                        <button id="btn-voltar" class="btn btn-primary" title="Voltar"><i class="fas fa-arrow-left"></i> Voltar</button>
                    </div>
                    <div class="col-md-1">
                        <button id="btn-gravar" class="btn btn-primary" title="Gravar"><i class="fa fa-save"></i> Gravar</button>
                    </div>
                    <div class="col-md-10">&nbsp;</div>
                </div>
            </div>
            <!-- BEGIN FORM-->
            <form action="#" class="form-horizontal">
                <div class="form-body">
                    <h4><b><font color="#3297E0">Dados Localidades Atendidas:</font></b></h4>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="col-md-5"><font color="#3297E0">Localidade:</font></div>
                            <div class="col-md-2"><font color="#3297E0">Cep:</font></div>
                            <div class="col-md-5"><font color="#3297E0">Cidade:</font></div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-5">
                                <input type="text" id="inlocalidade" data-required="1" size="" maxlength="50" class="form-control obg" placeholder="Informe Localidade..." value="" />
                            </div>
                            <div class="col-md-2">
                                <input type="text" id="inCep" data-required="1" size="" maxlength="50" class="form-control obg cep" placeholder="Informe Cep..." value="" />
                            </div>
                            <div class="col-md-5">
                                @Html.DropDownList("ListagemCidades", Model.ListagemCidades, new { @class = "form-control obg", @id = "ListagemCidades", style = "", @tabindex = "" })
                            </div>
                        </div>
                    </div>
                    <!-- ================================================================================= -->
                </div>
            </form>
            <!-- END FORM-->

            @*<input type="hidden" id="inRecarregaGrid" value="0" />*@
        </div>
    </div>
    <!-- END VALIDATION STATES-->
</div>

@Html.Hidden("Url2", @Url.Action("Index", "LocalidadesAtuacaoEmpresa", new { area = "Company" }))
@Html.Hidden("Url3", @Url.Action("AlterarDados", "LocalidadesAtuacaoEmpresa", new { area = "Company" }))

