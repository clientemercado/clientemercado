@model ClienteMercado.UI.Core.ViewModel.DadosEmpresaClienteViewModel

@{
    ViewBag.Title = "SuperMarket_On";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="http://code.jquery.com/jquery-1.8.2.js"></script>
<script src="http://code.jquery.com/ui/1.9.0/jquery-ui.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pnotify/3.2.1/pnotify.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pnotify/3.2.1/pnotify.buttons.js"></script>

<link rel="stylesheet" href="http://code.jquery.com/ui/1.9.0/themes/base/jquery-ui.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pnotify/3.2.1/pnotify.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pnotify/3.2.1/pnotify.buttons.css" />

<link href="~/Areas/Company/Content/css/index.css" rel="stylesheet" />
<script src="~/Areas/Company/Content/js/EmpresaCliente.js"></script>

<div class="row">
    <!-- BEGIN VALIDATION STATES-->
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                Alterar Cadastro - Empresa Cliente
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-1">
                        <button id="btn-voltar" class="btn btn-primary" title="Voltar"><i class="fas fa-arrow-left"></i> Voltar</button>
                    </div>
                    <div class="col-md-1">
                        <button id="btn-alterar" class="btn btn-primary" title="Gravar"><i class="fa fa-save"></i> Gravar</button>
                    </div>
                    <div class="col-md-10">&nbsp;</div>
                </div>
            </div>
            <!-- BEGIN FORM-->
            <form action="#" class="form-horizontal">
                <div class="form-body">
                    <!-- ================================================================================= -->
                    <h4><b><font color="#3297E0">Dados Empresa:</font></b></h4>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="col-md-3"><font color="#3297E0">CNPJ:</font></div>
                            <div class="col-md-5"><font color="#3297E0">Razão Social:</font></div>
                            <div class="col-md-4"><font color="#3297E0">Nome Fantasia:</font></div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-3">
                                <input type="text" id="inCNPJEmpresa" data-required="1" size="10" class="form-control obg" placeholder="Informe CNPJ..." value="@Model.cnpj_EmpresaCliente" readonly />
                            </div>
                            <div class="col-md-5">
                                <input type="text" id="inRazaoSocialEmpresa" data-required="1" size="10" class="form-control obg" placeholder="Informe Razão Social..." value="@Model.razaoSocial_EmpresaCliente" />
                            </div>
                            <div class="col-md-4">
                                <input type="text" id="inNomeFantasiaEmpresa" data-required="1" size="10" class="form-control obg" placeholder="Informe Nome Fantasia..." value="@Model.nomeFantasia_EmpresaCliente" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-4"><font color="#3297E0">E-mail 1:</font></div>
                            <div class="col-md-2"><font color="#3297E0">Telefone 1:</font></div>
                            <div class="col-md-3"><font color="#3297E0">País:</font></div>
                            <div class="col-md-3"><font color="#3297E0">Cep:</font></div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-4">
                                <input type="text" id="inEmail1Empresa" data-required="1" size="10" class="form-control obg" placeholder="Informe E-mail..." value="@Model.email1_EmpresaCliente" />
                            </div>
                            <div class="col-md-2">
                                <input type="tel" id="inTelefone1Empresa" data-required="1" size="10" class="form-control obg telefone" placeholder="Informe Telefone..." pattern="\([0-9]{2}\)[\s][0-9]{4}-[0-9]{4,5}" value="@Model.telefone1_EmpresaCliente" />
                            </div>
                            <div class="col-md-3">
                                @Html.DropDownList("inListaDePaises", Model.ListagemPaises, new { @class = "form-control obg", @id = "inListaDePaises", style = "", @tabindex = "" })
                            </div>
                            <div class="col-md-3">
                                <input type="text" id="inCepEmpresa" data-required="1" size="10" maxlength="9" class="form-control obg" placeholder="Informe CEP..." value="@Model.cepEndereco_EmpresaCliente" onClick="limparCampoCEP();" onkeypress="return MM_formtCep(event,this,'#####-###');" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-5"><font color="#3297E0">Endereço:</font></div>
                            <div class="col-md-4"><font color="#3297E0">Complemento:</font></div>
                            <div class="col-md-3"><font color="#3297E0">Bairro:</font></div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-5">
                                <input type="text" id="inEnderecoEmpresa" data-required="1" size="10" class="form-control obg" placeholder="Informe Endereço..." value="@Model.endereco_EmpresaCliente" />
                            </div>
                            <div class="col-md-4">
                                <input type="text" id="inComplementoEndEmpresa" data-required="1" size="10" class="form-control" placeholder="Complemento..." value="@Model.complementoEndereco_EmpresaCliente" />
                            </div>
                            <div class="col-md-3">
                                <input type="text" id="inBairroEmpresa" data-required="1" size="10" class="form-control obg" placeholder="Informe Bairro..." value="@Model.bairro_EmpresaCliente" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-5"><font color="#3297E0">Cidade:</font></div>
                            <div class="col-md-2"><font color="#3297E0">UF:</font></div>
                            <div class="col-md-5">&nbsp;</div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-5">
                                <input type="text" id="inCidadeEmpresa" data-required="1" size="10" class="form-control obg" placeholder="Informe Cidade..." value="@Model.cidade_EmpresaCliente" />
                            </div>
                            <div class="col-md-2">
                                @Html.DropDownList("inListaDeEstados", Model.ListagemEstados, new { @class = "form-control obg", @id = "inListaDeEstados", style = "", @tabindex = "" })
                            </div>
                            <div class="col-md-5">&nbsp;</div>
                        </div>
                    </div>
                    <!-- ================================================================================= -->
                </div>
            </form>
            <!-- END FORM-->

            <input type="hidden" id="inUF" value="@Model.uf_EmpresaCliente" />
            <input type="hidden" id="inPais" value="@Model.pais_EmpresaCliente" />
            <input type="hidden" id="inIEC" value="@Model.iEC" />
        </div>
    </div>
    <!-- END VALIDATION STATES-->
</div>

@Html.Hidden("Url2", @Url.Action("Index", "EmpresaCliente", new { area = "Company" }))